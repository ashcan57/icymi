<addon id="plugin.program.icymi" version="1.0.0" name="ICYMI Program" provider-name="ashcan57">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>ICYMI Build Installer</summary>
        <description>
            Installs or updates the ICYMI build for Kodi.
            It downloads and applies the build archive from Dropbox.
        </description>
        <disclaimer>Use responsibly; this replaces your Kodi configuration.</disclaimer>
        <platform>all</platform>
    </extension>
